<p id="notice" class="notice--error"><%= notice %></p>

<h1>Login</h1>

<%= form_tag(url: login_path, local: true) do %>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag 'Login' %>
  </div>

<% end %>
